<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="0dp"
    android:background="@drawable/wal_main"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_news">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="1dp"
            android:src="@drawable/in_home"></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/layout_news"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/ed_search"
                android:layout_width="190dp"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:hint="@string/search_hint" />
        </LinearLayout>




        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="6dp"
            android:src="@drawable/search_icon"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_margin="3dp"
            android:src="@drawable/likes_unclick"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_categories"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:orientation="vertical"
        android:background="@drawable/layout_news"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="1dp"
        android:padding="20dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/top1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/health1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/sport1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/business1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_top"
                android:textSize="14sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textStyle="bold"
                android:textColor="@color/BLUE"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_health"
                android:textSize="14sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_sport"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_business"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/entertainment1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/technology1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/science1"/>
            <ImageView
                android:id="@+id/iv_country"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:src="@drawable/country"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_entertainment"
                android:textSize="14sp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_technology"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_science"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/txt_countries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/txt_counteries"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"></TextView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_countries"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:padding="6dp"
        android:background="@drawable/layout_news">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:text="@string/txt_eg"
                android:textColor="@color/BLUE"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_us"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_in"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="18sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_jp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_sa"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_ae"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="18sp"></TextView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_categories"
        android:layout_width="94dp"
        android:layout_height="25dp"
        android:background="@drawable/layout_news"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/tv_categories"></TextView>

    <LinearLayout
        android:id="@+id/ll_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:src="@drawable/no_internet_icon"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:text="@string/no_internet"></TextView>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"></ListView>

</LinearLayout>