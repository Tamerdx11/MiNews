<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Full_news_data"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mainImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="2dp"
        android:layout_gravity="top"
        android:layout_margin="3dp"
        android:src="@drawable/image_news"></ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="title"
        android:textSize="25sp"
        style="@style/customStyle"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="title"
            style="@style/customStyle"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:text="@string/tv_source"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_source_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="title"
            style="@style/customStyle"
            android:layout_gravity="left"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/layout_news"
        android:hint="@string/txt_news"
        android:textSize="16sp"
        android:padding="20dp"
        android:layout_margin="13dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:background="@drawable/back_main">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:padding="10dp"
            android:hint="@string/txt_news"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textStyle="italic"
            android:textColor="@color/white"
            ></TextView>

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/download"></ImageView>

    </LinearLayout>

</LinearLayout>